@model IEnumerable<WebApplication1.Models.Doctors>

@{
    ViewData["Title"] = "Doctors";
}

<h3>Doctors</h3>
<p><a asp-controller="Doctors" asp-action="Create">Create New</a></p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Speciallity)</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Speciallity)</td>
                <td>
                    <a asp-controller="Doctors" asp-action="Edit" asp-route-id="@item.Id">Edit</a>    |
                    <a asp-controller="Doctors" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Doctors" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
